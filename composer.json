{
  "name": "kerox/twig-image-placeholder-extension",
  "type": "twig-extension",
  "description": "A Twig extension to generate images placeholder",
  "keywords": [
    "twig",
    "image",
    "placeholder",
    "extension"
  ],
  "homepage": "https://github.com/ker0x/twig-image-placeholder-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Romain Monteil",
      "email": "monteil.romain@gmail.com",
      "homepage": "https://kerox.fr",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.2",
    "ext-dom": "*",
    "twig/twig": "^2.4 || ^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "Kerox\\TwigImagePlaceholder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kerox\\TwigImagePlaceholder\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --diff --verbose --config=.php_cs",
    "phpunit": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
  }
}
